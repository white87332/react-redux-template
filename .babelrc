{
    "presets": [
        "@babel/preset-react",
        [
            "@babel/preset-env", {
                "modules": false
            }
        ]
    ],
    "env": {
        "development": {
            "plugins": [
                "react-hot-loader/babel",
                "@babel/plugin-syntax-dynamic-import",
                ["@babel/plugin-proposal-decorators", { "legacy": true }, "plugin-proposal-decorators"],
                ["@babel/plugin-proposal-class-properties", { "loose": true }, "plugin-proposal-class-properties"],
            ]
        },
        "production": {
           "plugins": [
               "@babel/plugin-syntax-dynamic-import",
               ["@babel/plugin-proposal-decorators", { "legacy": true }, "plugin-proposal-decorators"],
               ["@babel/plugin-proposal-class-properties", { "loose": true }, "plugin-proposal-class-properties"],
           ]
        }
    }
}
