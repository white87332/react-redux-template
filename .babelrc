{
    "presets": ["react", ["env", { "modules": false }], "stage-0"],
    "env":
    {
        "development":
        {
            "plugins": [
                ["react-transform",
                {
                    "transforms": [
                    {
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                    }]
                }],
                "babel-plugin-transform-decorators-legacy",
                "babel-plugin-styled-components"
            ]
        },
        "production":
        {
            "plugins": "babel-plugin-transform-decorators-legacy"
        }
    }
}
